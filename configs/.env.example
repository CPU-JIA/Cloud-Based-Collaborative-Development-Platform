# Cloud-Based Collaborative Development Platform
# Environment Variables Template
# 
# Copy this file to .env and fill in the values for your environment
# DO NOT commit .env file to version control

# ===========================
# Environment Configuration
# ===========================
ENVIRONMENT=development  # Options: development, staging, production

# ===========================
# Server Configuration
# ===========================
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# ===========================
# Database Configuration
# ===========================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=devcollab
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_database_password_here
DATABASE_SSL_MODE=disable  # Options: disable, require, verify-ca, verify-full

# ===========================
# Redis Configuration
# ===========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here  # Optional

# ===========================
# Kafka Configuration
# ===========================
KAFKA_BROKERS=localhost:9092

# ===========================
# Authentication & Security
# ===========================
JWT_SECRET=your_very_secure_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRY=168h  # 7 days

# Two-Factor Authentication
TWO_FACTOR_ENABLED=false

# ===========================
# Secret Management
# ===========================
SECRETS_ENCRYPTION_KEY=your_secret_encryption_key_32_chars_minimum

# HashiCorp Vault (Production)
VAULT_ADDR=https://vault.example.com:8200
VAULT_TOKEN=your_vault_token_here
VAULT_NAMESPACE=cloudplatform  # Optional, for Vault Enterprise
VAULT_MOUNT_PATH=secret
VAULT_SECRET_PATH=data/cloudplatform

# Vault AppRole Authentication (Alternative to token)
VAULT_ROLE_ID=your_role_id_here
VAULT_SECRET_ID=your_secret_id_here

# ===========================
# Storage Configuration
# ===========================
STORAGE_TYPE=local  # Options: local, s3

# S3 Storage (if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET=cloudplatform-storage

# ===========================
# Monitoring & Observability
# ===========================
TRACING_ENDPOINT=http://localhost:14268/api/traces
METRICS_PORT=9090
LOG_LEVEL=info  # Options: debug, info, warn, error

# ===========================
# CORS Configuration
# ===========================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3003

# ===========================
# Rate Limiting
# ===========================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ===========================
# Email Configuration (Optional)
# ===========================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM=noreply@cloudplatform.com

# ===========================
# External Services
# ===========================
# GitHub Integration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# GitLab Integration
GITLAB_CLIENT_ID=your_gitlab_client_id
GITLAB_CLIENT_SECRET=your_gitlab_client_secret
GITLAB_WEBHOOK_TOKEN=your_gitlab_webhook_token

# ===========================
# Feature Flags
# ===========================
FEATURE_SSO_ENABLED=false
FEATURE_MFA_ENABLED=true
FEATURE_API_TOKENS_ENABLED=true

# ===========================
# Development Only
# ===========================
# These should only be used in development environment
DEV_AUTO_MIGRATE=true
DEV_SEED_DATA=true
DEV_DEBUG_MODE=true